<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameVetProfile"
        android:layout_width="218dp"
        android:layout_height="51dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:hint="Name Vet"
        android:padding="10dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusVet"
        android:layout_width="109dp"
        android:layout_height="37dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto"
        android:hint="Status Vet"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameVetProfile" />

    <Button
        android:id="@+id/buttonWatch"
        android:layout_width="74dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="53dp"
        android:backgroundTint="@color/primaryBlue"
        android:fontFamily="@font/roboto"
        android:text="Ver"
        app:cornerRadius="150px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameVetProfile"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="358dp"
        android:layout_height="3dp"
        android:layout_marginTop="3dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusVet" />
</androidx.constraintlayout.widget.ConstraintLayout>